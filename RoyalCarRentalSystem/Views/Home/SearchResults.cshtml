@model IEnumerable<RoyalCarRentalSystem.Models.Car>

@{
    ViewBag.Title = "Search Results";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<h2>Search Results</h2>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Price Per Day</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.PricePerDay</td>
                <td><a href="@Url.Action("BookCar", "Home", new { id = car.Id })" class="btn btn-primary">Select</a></td>
            </tr>
        }
    </tbody>
</table>