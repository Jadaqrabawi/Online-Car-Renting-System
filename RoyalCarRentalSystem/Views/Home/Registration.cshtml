@model RoyalCarRentalSystem.Models.PassengerData

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<center style="background-color:aqua">
    @using (Html.BeginForm("Registration", "Home", FormMethod.Post))
    {
        <br />
        <br />
        <br />
        <br />
        <br />
        <table border="1" backColor="Yellow">
            <tr>
                <td colspan="2" align="center"><h2>Register</h2></td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.firstName)</td>
                <td>@Html.TextBoxFor(m => m.firstName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.lastName)</td>
                <td>@Html.TextBoxFor(m => m.lastName)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.email)</td>
                <td>@Html.TextBoxFor(m => m.email)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.mobile)</td>
                <td>@Html.TextBoxFor(m => m.mobile)</td>
            </tr>
            <tr>
                <td>@Html.LabelFor(m => m.pass)</td>
                <td>@Html.TextBoxFor(m => m.pass)</td>
            </tr>
            <tr>
                <td colspan="2" align="center">
                    <input type="Submit" value="Register" />
                </td>
            </tr>
        </table>
        <br />
        <br />
        <br />
        <br />
        <br />
    }
</center>